db.products.find();

// 1. Calcule o valor total do estoque, considerando que cada produto valha o mesmo que seu pre√ßo de venda. Lembre-se da quantidade.
use("storage");
db.products.aggregate([
  {
    $addFields: {
      stock_total_value: {
        $multiply: [
          "$quantity",
          "$sale_price",
        ],
      },
    },
  },
]);
